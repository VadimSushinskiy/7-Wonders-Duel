<Window x:Class="_7_Wonders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_7_Wonders"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" WindowState="Maximized" WindowStyle="None">
    <Window.DataContext>
        <local:GameViewModel></local:GameViewModel>
    </Window.DataContext>
    <DockPanel Name="TopMenu" LastChildFill="True">
        <DockPanel Width="1920" Height="100" Background="Gray" DockPanel.Dock="Top" LastChildFill="False">
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                <TextBox Style="{StaticResource ResourceButtonTemplate}" Text="{Binding FirstResource.Gold, StringFormat=Gold:&#x0d;&#x0a; {0}}"/>
                <TextBox Style="{StaticResource ResourceButtonTemplate}" Text="{Binding FirstResource.Wood, StringFormat=Wood:&#x0d;&#x0a; {0}}"/>
                <TextBox Style="{StaticResource ResourceButtonTemplate}" Text="{Binding FirstResource.Stone, StringFormat=Stone:&#x0d;&#x0a; {0}}"/>
                <TextBox Style="{StaticResource ResourceButtonTemplate}" Text="{Binding FirstResource.Brick, StringFormat=Brick:&#x0d;&#x0a; {0}}"/>
                <TextBox Style="{StaticResource ResourceButtonTemplate}" Text="{Binding FirstResource.Paper, StringFormat=Paper:&#x0d;&#x0a; {0}}"/>
                <TextBox Style="{StaticResource ResourceButtonTemplate}" Text="{Binding FirstResource.Glass, StringFormat=Glass:&#x0d;&#x0a; {0}}"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <TextBox Style="{StaticResource ResourceButtonTemplate}" Text="{Binding SecondResources.Gold, StringFormat=Gold:&#x0d;&#x0a; {0}}"/>
                <TextBox Style="{StaticResource ResourceButtonTemplate}" Text="{Binding SecondResources.Wood, StringFormat=Wood:&#x0d;&#x0a; {0}}"/>
                <TextBox Style="{StaticResource ResourceButtonTemplate}" Text="{Binding SecondResources.Stone, StringFormat=Stone:&#x0d;&#x0a; {0}}"/>
                <TextBox Style="{StaticResource ResourceButtonTemplate}" Text="{Binding SecondResources.Brick, StringFormat=Brick:&#x0d;&#x0a; {0}}"/>
                <TextBox Style="{StaticResource ResourceButtonTemplate}" Text="{Binding SecondResources.Paper, StringFormat=Paper:&#x0d;&#x0a; {0}}"/>
                <TextBox Style="{StaticResource ResourceButtonTemplate}" Text="{Binding SecondResources.Glass, StringFormat=Glass:&#x0d;&#x0a; {0}}"/>
            </StackPanel>
            <TextBox Style="{StaticResource ResourceButtonTemplate}" Margin="30 0 0 0" Width="125" Text="{Binding War, StringFormat=War Points:&#x0d;&#x0a; {0}}"/>
        </DockPanel>
        <Canvas Width="300" DockPanel.Dock="Left">
            <Image Source="Images/Cards/BackFirstEpoch.png" Canvas.Top="130" Canvas.Left="245">
                <Image.RenderTransform>
                    <RotateTransform Angle="90"></RotateTransform>
                </Image.RenderTransform>
            </Image>
            <Image Source="Images/Wonders/CircusMaximus.png" Canvas.Top="100" Canvas.Left="30" Width="325"/>
            <Image Source="Images/Cards/BackFirstEpoch.png" Canvas.Top="480" Canvas.Left="245">
                <Image.RenderTransform>
                    <RotateTransform Angle="90"></RotateTransform>
                </Image.RenderTransform>
            </Image>
            <Image Source="Images/Wonders/CircusMaximus.png" Canvas.Top="450" Canvas.Left="30" Width="325"/>
        </Canvas>
        <Canvas Width="300" DockPanel.Dock="Right">
            <Image Source="Images/Cards/BackFirstEpoch.png" Canvas.Top="280" Canvas.Right="95">
                <Image.RenderTransform>
                    <RotateTransform Angle="-90"></RotateTransform>
                </Image.RenderTransform>
            </Image>
            <Image Source="Images/Wonders/CircusMaximus.png" Canvas.Top="100" Canvas.Right="30" Width="325"/>
            <Image Source="Images/Cards/BackFirstEpoch.png" Canvas.Top="630" Canvas.Right="95">
                <Image.RenderTransform>
                    <RotateTransform Angle="-90"></RotateTransform>
                </Image.RenderTransform>
            </Image>
            <Image Source="Images/Wonders/CircusMaximus.png" Canvas.Top="450" Canvas.Right="30" Width="325"/>
        </Canvas>
        <StackPanel  Height="200" DockPanel.Dock="Bottom" Background="Red">
            <Button Content="Press Me!" Height="50" Width="300" Command="{Binding ShuffleCommand}"/>
        </StackPanel>
        <Grid>
            <Canvas Grid.Column="0" Grid.Row="0">
                <Image Source="{Binding CardsName[0]}" Visibility="{Binding CardsVisibility[0]}" Canvas.Bottom="450" Canvas.Left="700" Width="125">
                    <Image.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding BuyCommand}" CommandParameter="0"/>
                        <MouseBinding Gesture="RightClick" Command="{Binding SellCommand}" CommandParameter="0"/>
                    </Image.InputBindings>
                </Image>
                <Image Source="{Binding CardsName[1]}" Visibility="{Binding CardsVisibility[1]}" Canvas.Bottom="450" Canvas.Left="500" Width="125">
                    <Image.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding BuyCommand}" CommandParameter="1"/>
                        <MouseBinding Gesture="RightClick" Command="{Binding SellCommand}" CommandParameter="1"/>
