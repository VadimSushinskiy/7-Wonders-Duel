                <Image Source="{Binding CardsName[5]}" Visibility="{Binding CardsVisibility[5]}" Canvas.Bottom="250" Canvas.Left="900" Width="125">
                    <Image.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding BuyCommand}" CommandParameter="5"></MouseBinding>
                    </Image.InputBindings>
                </Image>
