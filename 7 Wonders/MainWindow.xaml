<Window x:Class="_7_Wonders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_7_Wonders"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" WindowState="Maximized" WindowStyle="None">
    <Window.DataContext>
        <local:GameViewModel></local:GameViewModel>
    </Window.DataContext>
    <DockPanel Name="TopMenu" LastChildFill="True">
        <DockPanel Width="1920" Height="100" Background="Gray" DockPanel.Dock="Top" LastChildFill="False">
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                <TextBox Width="100" Height="100" FontSize="20" Text="{Binding FirstResource.Gold}"/>
                <TextBox Width="100" Height="100" FontSize="20" Text="{Binding FirstResource.Brick}"/>
                <TextBox Width="100" Height="100" FontSize="20" Text="{Binding FirstResource.Wood}"/>
                <TextBox Width="100" Height="100" FontSize="20" Text="{Binding FirstResource.Stone}"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <TextBox Width="100" Height="100" FontSize="20" Text="{Binding SecondResources.Gold}"/>
                <TextBox Width="100" Height="100" FontSize="20" Text="{Binding SecondResources.Brick}"/>
                <TextBox Width="100" Height="100" FontSize="20" Text="{Binding SecondResources.Wood}"/>
                <TextBox Width="100" Height="100" FontSize="20" Text="{Binding SecondResources.Stone}"/>
            </StackPanel>
        </DockPanel>
        <Rectangle Width="300" Height="600" DockPanel.Dock="Left" Fill="Blue"></Rectangle>
        <Rectangle Width="300" Height="600" DockPanel.Dock="Right" Fill="Blue"></Rectangle>
        <StackPanel Width="1300" Height="200" DockPanel.Dock="Bottom" Background="Red">
            <Button Content="Press Me!" Height="50" Width="300" Command="{Binding ShuffleCommand}"/>
        </StackPanel>
        <Grid>
            <Canvas Grid.Column="0" Grid.Row="0">
                <Image Source="{Binding CardsName[0]}" Visibility="{Binding CardsVisibility[0]}" Canvas.Bottom="450" Canvas.Left="700" Width="125">
                    <Image.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding BuyCommand}" CommandParameter="0"></MouseBinding>
                    </Image.InputBindings>
                </Image>
                <Image Source="{Binding CardsName[1]}" Visibility="{Binding CardsVisibility[1]}" Canvas.Bottom="450" Canvas.Left="500" Width="125">
                    <Image.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding BuyCommand}" CommandParameter="1"></MouseBinding>
                    </Image.InputBindings>
                </Image>
                <Image Source="{Binding CardsName[2]}" Visibility="{Binding CardsVisibility[2]}" Canvas.Bottom="350" Canvas.Left="800" Width="125">
                    <Image.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding BuyCommand}" CommandParameter="2"></MouseBinding>
                    </Image.InputBindings>
                </Image>
                <Image Source="{Binding CardsName[3]}" Visibility="{Binding CardsVisibility[3]}" Canvas.Bottom="350" Canvas.Left="600" Width="125">
